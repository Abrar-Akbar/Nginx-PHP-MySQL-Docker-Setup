version: '3'
services:
  nginx:
    build: 
      context: ./nginx/
      dockerfile: Dockerfile
    container_name: nginx-container
    ports:
      - "80:80" # Map container port 80 to host port 80
    volumes:
      - ./www/html:/var/www/html
      - ./www/html/images:/var/www/html/images  # Add this line to mount images directory
    depends_on:
      - php
      #the links option as it's deprecated in Docker Compose version 3 and above. Instead, use the networks option to connect containers to
    restart: always
    networks:
      - nginx-php
  php:
    image: php:7.4-fpm
    container_name: php-container 
    expose:
      - "9000" # Expose FPM port for external access
    volumes:
      - ./www/html:/var/www/html
      - ./www/html/images:/var/www/html/images  # Add this line to mount images directory
    restart: always
    networks:
      - nginx-php
  mysql:
    image: mysql:5.6
    container_name: mysql-container
    environment: #  Environment variables
      - MYSQL_ROOT_PASSWORD=testing
      - MYSQL_DATABASE=testdb
      - MYSQL_USER=test
      - MYSQL_PASSWORD=testing
    volumes:
      - mysql-data:/var/lib/mysql
    restart: always
    networks:
      - nginx-php
networks:
  nginx-php:
    driver: bridge
volumes:
  mysql-data:
